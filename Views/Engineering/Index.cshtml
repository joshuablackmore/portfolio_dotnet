@model portfolio_dotnet.ViewModels.Engineering.EngineeringViewModel;

@{
    ViewData["Title"] = "Engineering";
}

<section>
    <header>
        <h1 class="text-md italic">@Model.PageTitle</h1>
        <hr class="mt-3 w-56 border-t border-gray-200 opacity-60 mx-auto mb-12" />
    </header>

    @foreach (var job in Model.Positions)
    {
        <article class="mb-6 bg-base-100 border border-base-200 shadow-sm rounded-lg p-6 sm:p-8 space-y-6">
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center">
                <h2 class="text-xl font-bold text-gray-800">@job.Company</h2>
                <span class="text-sm text-gray-500 mt-1 sm:mt-0">@job.Period</span>
            </div>

            <div>
                <p class="text-lg text-gray-700 font-semibold">@job.Role</p>
            </div>

            <div>
                <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-1">Responsibilities</h3>
                <p class="text-base text-gray-600 leading-relaxed">@job.Responsibilities</p>
            </div>
            @if (!string.IsNullOrEmpty(job.TechStack))
            {
                <div>
                    <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-1">TechStack</h3>
                    <p class="text-base text-gray-600 leading-relaxed">@job.TechStack</p>
                </div>
            }
        </article>
    }
</section>