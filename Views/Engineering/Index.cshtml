@model portfolio_dotnet.ViewModels.Engineering.EngineeringViewModel;

@{
    ViewData["Title"] = "Engineering";
}

<section>
    <header>
        <h1 class="text-md">@Model.PageTitle</h1>
        <hr class="mt-3 w-56 border-t border-gray-200 opacity-60 mx-auto" />
    </header>

    <article class="bg-base-100 p-8">
        <div class="mb-6">
            <h2 class="text-lg font-semibold text-gray-500 uppercase tracking-wide mb-1">Company</h2>
            <p class="text-xl font-medium text-gray-800">@Model.Company</p>
        </div>

        <div class="mb-6">
            <h2 class="text-lg font-semibold text-gray-500 uppercase tracking-wide mb-1">Role</h2>
            <p class="text-xl font-medium text-gray-800">@Model.CurrentRole</p>
        </div>

        <div>
            <h2 class="text-lg font-semibold text-gray-500 uppercase tracking-wide mb-1">Responsibilities</h2>
            <p class="text-base text-gray-700 leading-relaxed">@Model.Responsibilities</p>
        </div>
    </article>
</section>