@model portfolio_dotnet.ViewModels.Music.ListeningViewModel

@{
    ViewData["Title"] = "What I'm Listening To";
}

<section>
    <header>
        <h1 class="text-md italic">@Model.PageTitle</h1>
        <hr class="mt-3 w-56 border-t border-gray-200 opacity-60 mx-auto mb-12" />
    </header>

    @{
        var layoutClass = Model.ArtistCards.Count > 1 ? "grid md:grid-cols-2 gap-6 place-items-center md:items-start"
        : "flex justify-center";
    }
        <div class="py-4">
            <div class="@layoutClass">
    @foreach (var card in Model.ArtistCards)
    {
                @await Html.PartialAsync("_ArtistCard", card)
    }
            </div>
        </div>

</section>